@model IEnumerable<DataLayer.User>

@{
	ViewBag.Title = "لیست کاربران";
}

<div class="row">
	<div class="container">
	<div class="col-lg-12">
		<h2>Index</h2>
		<p>
			<a href="@Url.Action("Create")" class="btn btn-success">ثبت کاربر جدید</a>
		</p>
		<table class="table">
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.Name)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.UserName)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Password)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.CreatDate)
				</th>
				<th></th>
			</tr>

			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Name)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.UserName)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Password)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.CreatDate)
					</td>
					<td>
						<a class="btn btn-danger btn-sm" href="@Url.Action("Delete" ,new {id=item.UserId })">حذف</a>
					</td>
				</tr>
			}

		</table>
	</div>
	</div>
</div>
